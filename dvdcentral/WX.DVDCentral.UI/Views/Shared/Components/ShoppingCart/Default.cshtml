@model WX.DVDCentral.BL.Models.ShoppingCart
<div class="m-2">
    <dl class="dl-horizontal">
        <dt>

        </dt>
        <dd>
            @{
                int count = Model.TotalCount;

                <input hidden id="cartcount" value="@count" />

                <a asp-controller="ShoppingCart"
               asp-action="Index" id="cartcountdisp">
                    @count.ToString() items
                </a>

                <br />
                <a asp-controller="ShoppingCart" asp-action="Checkout">Checkout</a>

            }
        </dd>
    </dl>
</div>