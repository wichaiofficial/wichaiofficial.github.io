@model IEnumerable<WX.DVDCentral.BL.Models.Movie>

@{
    ViewData["Title"] = ViewBag.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p class="ps-2">
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-4">
            <div class="card mb-2">
                <div class="card-header">
                    <h4>@item.Title</h4>
                </div>
                <img src="~/images/@item.ImagePath" class="card-img" onclick="on('/images/@item.ImagePath');" />
                <table class="table">
                    <thead>
                        <tr>                      
                        <th>@Html.DisplayNameFor(model => model.Format)</th>
                        <th>@Html.DisplayNameFor(model => model.Rating)</th>
                        <th>@Html.DisplayNameFor(model => model.InStkQty)</th>
                        <th>@Html.DisplayNameFor(model => model.Cost)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(model => item.Format)</td>
                            <td>@Html.DisplayFor(model => item.Rating)</td>
                            <td>@Html.DisplayFor(model => item.InStkQty)</td>
                            <td>@Html.DisplayFor(model => item.Cost)</td>
                        </tr>
                    </tbody>
                </table>
                <table class="table">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Description)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(model => item.Description)</td>                          
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td class="card-footer">
                                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
                                <input class="btn btn-primary btn-sm" type="button" onclick="AddToCart(@item.Id)" value="Add" />
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    }
</div>